{% extends '@template/layout.html.twig' %}

{% block title %}{{ p.name }}{% endblock %}

{% block main %}
    {%include '@template/breadcrumb/view.html.twig' with {
        'breadcrumbElements' : {
            'home' : {
                'name': 'Home',
                'path' : path('homepage'),
            },
            'category' : {
                'name': p.categories|first.name,
                'path': path('category.view', {'id': p.categories|first.id, 'slug' : p.categories|first.slug}),
            },
            'product' : {
                'name': p.name,
                'active' : true,
            },
        },
        'currentRoute' : 'product_view'
    } %}

    {% include('@template/product/product_card.html.twig') with {
        'level' : level,
        'header' : header,
        'category' : true
        }
    %}
{% endblock %}
