{% extends 'admin/layout.html.twig' %}

{% set productTitle = product is defined ? product.id ~ ' - ' ~ product.name : 'New Product' %}
{% block title %}{{ productTitle }}{% endblock %}

{% block main %}
    <h1>{{ productTitle }}</h1>
    <hr>

    {% for type, messages in app.flashes %}
        <div class="alert alert-{{ type }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    <div class="row">
        <div class="col-6">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
        </div>
        <div class="col-6">
            {{ form_row(formView.status) }}
        </div>
    </div>
    <div>
        {{ form_row(formView.shortDescription) }}
    </div>
    <hr>
    <div class="row">
        <div class="col-6">
            {{ form_row(formView.categories) }}
        </div>
        <div class="col-6">
            {{ form_row(formView.mainPicture) }}
        </div>
    </div>

    <button class="btn btn-dark rounded-1" type="submit"><i class="fas fa-save"></i>&nbsp;&nbsp;Save</button>

    {{ form_end(formView) }}
{% endblock %}

