{% extends 'admin/layout.html.twig' %}


{% block title %}{% if category is defined %}Modifier : {{ category.name }}{% else %}Nouvelle catégorie{% endif %}{% endblock %}

{% block main %}
    <h1>{% if category is defined %}{{ category.id }} - {{ category.name }}{% else %}Nouvelle catégorie{% endif %}</h1>
    <hr>

    {% for type, messages in app.flashes %}
        <div class="alert alert-{{ type }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    <div class="row">
        <div class="col-12">
            {{ form_row(formView.name) }}
            {{ form_row(formView.shortDescription) }}
        </div>

    </div>
    <div class="row">
        <div class="col-2">
            {{ form_row(formView.isInMenu) }}
        </div>
    </div>

    <button class="btn btn-dark rounded-1" type="submit"><i class="fas fa-save"></i>&nbsp;&nbsp;Enregistrer</button>

    {{ form_end(formView) }}
    {# TODO Display products example from this category #}
{% endblock %}
