{% extends 'admin/layout.html.twig' %}

{% block title %}Edit {{ category.name|upper }}{% endblock %}

{% block main %}

    <div class="card rounded-3">
        <div class="card-header fs-3">
            Edit {{ category.name|upper }}
        </div>
        <div class="card-body">
            {{ form_start(formView) }}

            {{ form_errors(formView) }}

            <div class="row">
                <div class="col-lg-6">{{ form_row(formView.id) }}</div>
                <div class="col-lg-6">{{ form_row(formView.createdAt) }}</div>
            </div>

            <div class="row">
                <div class="col-lg-6">{{ form_row(formView.name) }}</div>
                <div class="col-lg-6">{{ form_row(formView.slug) }}</div>
            </div>

            {{ form_row(formView.shortDescription) }}

            <button class="btn btn-dark rounded-1" type="submit"><i class="fas fa-save"></i>&nbsp;&nbsp;Create</button>

            {{ form_end(formView) }}
            {# TODO Display products example from this category #}
        </div>
    </div>
{% endblock %}
