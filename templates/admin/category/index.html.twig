{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block main %}
    <div class="col-10">
        {% for type, messages in app.flashes %}
            <div class="alert alert-{{ type }}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        <h1>Categories :</h1>
        <hr>
        <a href="{{ path('admin.category.create') }}" class="btn btn-info btn-sm rounded-3">+ Créer</a>
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Action</th>
                    <th scope="col">Menu</th>
                </tr>
            </thead>

            <tbody>
            {% for category in categories %}
                <tr class="table-{{ loop.index is odd ? 'info' : 'secondary' }}">
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td><a href="{{ path('admin.category.edit', {'id': category.id, 'slug': category.slug}) }}" type="button" class="btn btn-info btn-sm rounded-3"><i class="fa-solid fa-arrow-right"></i>&nbsp;Update</a></td>
                    <td>{% if category.inMenu %}<i class="fa fa-check" aria-hidden="true"></i>{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
