{% extends 'admin/layout.html.twig' %}

{% block title %}Categories list{% endblock %}

{% block main %}
    <div class="col-10">
        <h1>Categories :</h1>
        <hr>
        <a href="{{ path('admin.category.create') }}" class="btn btn-info btn-sm rounded-3">+ Create</a>
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
            {% for category in categories %}
                <tr class="table-{{ loop.index is odd ? 'info' : 'secondary' }}">
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td><a href="{{ path('admin.category.edit', {'id': category.id, 'slug': category.slug}) }}" type="button" class="btn btn-info btn-sm rounded-3"><i class="fa-solid fa-arrow-right"></i>&nbsp;Update</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
